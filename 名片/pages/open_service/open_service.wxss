.my_head{
  height: 235rpx;
  width: 100%;
  position: relative;
  align-items:center;
  padding: 0 31rpx;
  box-sizing: border-box;
}
.my_head .my_back{
  width: 100%;
  height: 235rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.my_head .my_left{
  position: relative;
}
.my_head .my_left .logo{
  width: 120rpx;
  height: 120rpx;
  display: block;
  border-radius: 100%;
  margin-right: 26rpx;
}
.my_head .my_left .name{
  font-size: 40rpx;
  color: #fff;
  margin-top: 10rpx;
  text-align: center;
}
.my_head .my_left .job{
  font-size: 24rpx;
  color: #fff;
  margin-top: 17rpx;
  text-align: center;
}
.my_head .my_right{
  width: 202rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  border-radius: 2px;
  position: relative;
}
.my_head .my_right image{
  width: 38rpx;
  height: 33rpx;
  margin: 14rpx 10rpx 0 27rpx;
}
.my_head .my_right view{
  font-size: 28rpx;
  color: #E04239;
}
.con_box{
  padding: 0 4%;
}
.con_box .title{
  height: 100rpx;
  line-height: 100rpx;
}
.con_box .title text{
  display: block;
  width: 16rpx;
  height: 16rpx;
  margin: 43rpx 20rpx 0 0;
  background-color: #E04239;
}
.con_box .title view{
  font-size: 30rpx;
}
.money .money_box{
  width:330rpx;
  height:160rpx;  
  border: 1px solid #ddd;
  text-align: center;
  margin-bottom: 20rpx;
}
.money .active{
  border: 1px solid #E04239;
}
.money .money_box .top{
  font-size: 40rpx;
  color: #E04239;
  margin-bottom: 15rpx;
  margin-top: 35rpx;
}
.money .money_box .down{
  font-size: 22rpx;
  color: #999;
}
.money .money_box .down text{
  text-decoration:line-through;
}
.con_box .privilege image{
  width: 14rpx;
  height: 14rpx;
  margin: 10rpx 20rpx 0 0;
}
.con_box .privilege view .text{
  width: 95%;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  text-align: justify;
  line-height: 150%;
}
.big_bnt{
  margin: 80rpx auto;
}