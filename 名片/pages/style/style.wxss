.style_box .list{
  width: 48%;
  margin-bottom: 44rpx;
}
.style_box .list .img{
  width: 100%;
  height: 590rpx;
  border-radius: 5px;
  overflow: hidden;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
}
.style_box .list .img image{
  width: 100%;
  height: 590rpx;
}
.style_box .list .name{
  font-size: 28rpx;
  color: #999;
}
.style_box .list .price{
  font-size: 28rpx;
  color: #E04239;
}
.style_box .list .bnt{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #fff;
  font-size: 28rpx;
  color: #999;
  border-radius: 30rpx;
  margin-top: 20rpx;
  border: 1px solid #999;
}
.style_box .list .bnt.on{
  background-color: #E04239;
  border: 1px solid #E04239;
  color: #fff;
}